<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="2dp"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:paddingBottom="5dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/chat_other_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="[username]"
        android:textSize="9sp"
        android:textStyle="italic"
        android:padding="2dp"
        android:textColor="#5000"
        />

    <ImageView
        android:id="@+id/chat_other_avatar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/tv_arrow"
        android:layout_below="@id/chat_other_username"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/chat_other_username"
        android:layout_toEndOf="@id/chat_other_avatar"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="35dp"
        android:padding="10dp"
        android:background="#ff78ff6e">

        <TextView
            android:id="@+id/chat_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="[Message_Text]"
            android:textColor="#000"
            android:padding="5dp"
            android:textSize="16sp"/>

        <ImageView
            android:id="@+id/chat_joined_image"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_below="@id/chat_message"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/tv_daredevil"
            android:visibility="gone"/>

    </RelativeLayout>

</RelativeLayout>