<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->

        <item name="android:windowContentTransitions">true</item>

        <item name="android:windowEnterTransition">@transition/login_out_transition</item>
        <item name="android:windowExitTransition">@transition/login_in_transition</item>

    </style>

    <style name="AppTheme.Blue" parent="AppTheme">
        <item name="android:statusBarColor">#ff0277bd</item>
        <item name="colorPrimary">#FF0091EA</item>
        <item name="android:navigationBarColor">#FF0091EA</item>
        <item name="android:textColor">#FF81D4FA</item>
    </style>

    <style name="AppTheme.Red" parent="AppTheme">
        <item name="android:statusBarColor">#FFC62828</item>
        <item name="colorPrimary">#FFF44336</item>
        <item name="android:navigationBarColor">#FFF44336</item>
        <item name="android:textColor">#FFEF9A9A</item>
    </style>
</resources>